Algoritmo "Equação de segundo grau"

Var

   a, b, c, delta, xa, xb: real

Inicio

   escreval("Resolva sua equação de segundo grau")
   escreva("Digite o valor de a: ")
   leia (a)
   escreva("Digite o valor de b: ")
   leia (b)
   escreva("Digite o valor de c: ")
   leia (c)

   escreval("O resultado dessa equação é...")
   delta <- b^2 - 4*a*c
   escreval("Delta = ", delta)
   se (delta >= 0) então
   xa <- (-b) + raizq(delta)
   xb <- (-b) - raizq(delta)
   escreval("x'  = ", xa/2*a)
   escreval("x'' = ", xb/2*a)

   senao
      escreva("Não possui raízes reais")
   fimse


Fimalgoritmo



